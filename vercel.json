{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "",
  "outputDirectory": "public",
  "functions": {
    "api/*.js": {
      "maxDuration": 30
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.js", "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"] },
    { "src": "/assets/(.*)", "headers": { "Cache-Control": "public, max-age=31536000, immutable" } },
    { "src": "/css/(.*)\\.css", "headers": { "Cache-Control": "public, max-age=86400" } },
    { "src": "/js/(.*)\\.js", "headers": { "Cache-Control": "public, max-age=86400" } }
  ]
}
